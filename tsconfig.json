{
    "compilerOptions": {
      "target": "ES2022",
      "downlevelIteration": true,
      "importHelpers": true,
      "module": "commonjs",
      "declaration": true,
      "strict": true,
      "pretty": true,     
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "resolveJsonModule": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node"],
      "outDir": "build",
      "rootDir": "./",
    },
    "exclude": ["node_modules", "build"]
  }